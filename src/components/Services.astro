---
const { number, title, description } = Astro.props;
---

<div class="row gap-2 align-items-baseline">
    <div class="col-1">
        <h3 class="number">{number}</h3>
    </div>
    <div class="col">
        <h4>{title}</h4>
        <p>{description}</p>
    </div>
</div>

<style>
    .number {
        color: #9b9b9b;
    }
    h3 {
        font-size: 2.5em !important;
    }
    h4 {
        font-weight: 600;
        font-family: sans-serif;
    }
    h3,
    p, h4 {
        color: white;
    }
    p {
        font-weight: 300;
    }

</style>
